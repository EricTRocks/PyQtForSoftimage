<?xml version="1.0" encoding="utf-8"?>
<components>
	<!-- define your component folder/file structure for what you want to create as a template -->
	<folder			name="[name]">
		<folder 	name="img">
			<file 	name="icon.png"			copyFrom="[icon]"/>
		</folder>
		<file		name="__init__.py"		templateFrom="__init__.py"/>
		<file		name="__meta__.xml"		templateFrom="__meta__.xml"/>
		<file		name="[module].py"		templateFrom="[source].py"/>
		<file		name="main.pyw"			templateFrom="main.pyw"/>
		<file		name="[name].blurproj"	templateFrom="project.blurproj"/>
	</folder>
</components>